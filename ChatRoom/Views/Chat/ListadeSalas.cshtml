@model IEnumerable<ChatRoom.Controllers.ChatController>



<html lang="es">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Chatroom - Salas</title>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css">
</head>
<body>
	<div class="container">
		<h1>Salas de chat</h1>
		<hr>
		<div class="row">
			<div class="row">
				@if (ViewBag.Salas != null)
				{
					// Iterar sobre ViewBag.Salas aquí
					@foreach (var sala in ViewBag.Salas)
					{
						<div class="col-md-4">
							<div class="card">
								<div class="card-header">
									Sala
								</div>
								<div class="card-body">
									<p>@ViewBag.DescripcionesDeSalas[sala.Key]</p> <!-- Aquí agregamos la descripción de la sala -->
									<a href="@Url.Action("Cuarto", "Chat", new { sala = sala.Key })" class="btn btn-primary">Unirse</a>
								</div>
							</div>
						</div>
					}
				}
				else
				{
					<p>No hay salas</p>
				}

			</div>

		</div>
	</div>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
